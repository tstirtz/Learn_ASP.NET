@model IEnumerable<Learn_ASP.NET.Models.Book>

@{
    ViewBag.Title = "Index";
}


<h2 class="view-header">My Favorite Books</h2>


<div class="container">
    <table class="table table-striped table-borderless">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Rating)
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(i => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(i => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(i => item.Rating) / 10
                </td>
            </tr>
        }
    </table>
</div> 

